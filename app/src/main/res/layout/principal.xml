<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/cast_expanded_controller_progress_text_color"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cast_expanded_controller_ad_label_background_color"
            android:visibility="visible">

            <TextView
                android:text="MPS"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView8"
                android:textSize="50sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="31dp"
                android:textStyle="normal|bold"
                android:fontFamily="cursive"
                android:layout_alignBottom="@+id/textView10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="128dp"
                android:background="@drawable/img">

                <Button
                    android:text="Relatório"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRelatorio"
                    android:onClick="TelaRelatorio"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:drawable/zoom_plate"
                    android:elevation="0dp"
                    android:textColor="@color/cast_expanded_controller_text_color" />

                <Button
                    android:text="Configurações"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnConfig"
                    android:onClick="TelaConfig"
                    android:layout_above="@+id/btnRelatorio"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:drawable/zoom_plate"
                    android:textColor="@color/cast_expanded_controller_text_color" />

                <Button
                    android:text="PARAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnParar"
                    android:onClick="PararTimer"
                    android:enabled="false"
                    android:layout_above="@+id/btnConfig"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:drawable/zoom_plate"
                    android:textColor="@color/cast_expanded_controller_text_color" />

                <Button
                    android:text="INICIAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnIniciar"
                    android:onClick="IniciarTimer"
                    android:layout_above="@+id/btnParar"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:elevation="0dp"
                    android:background="@android:drawable/zoom_plate"
                    android:textColor="@color/cast_expanded_controller_text_color" />

            </RelativeLayout>

            <TextView
                android:text="Monitoramento\nPostura\nEm Smartphones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="31sp"
                android:textStyle="normal|bold"
                android:fontFamily="cursive"
                android:layout_marginTop="11dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView8"
                android:layout_marginStart="46dp" />
        </RelativeLayout>
    </LinearLayout>
